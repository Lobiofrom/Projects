<resources>
    <style name="BoldItalicText">
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="Widget.MyApp.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/black</item>
        <item name="android:background">@drawable/tab_layout_background</item>
        <item name="tabBackground">@drawable/tab_selector</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicator">@null</item>
        <item name="tabMode">fixed</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>
